<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.lwt_server.mapper.UserMapper">
    <!--插入-->
    <insert id="insert">
        insert into mydb.user(id, msg, start_time, end_time, edit_time)
        values (#{id}, #{msg}, #{startTime}, #{endTime}, #{editTime})
    </insert>

    <!--上传文件自动拓展列表-->
    <insert id="addFiles">
        insert into mydb.fileList(name, url)
        values (#{name}, #{url})
    </insert>

    <!--更新-->
    <update id="update">
        update mydb.user
        <set>
            <if test="msg != null">msg = #{msg},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="editTime != null">edit_time = #{editTime}</if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <!--删除数据-->
    <delete id="delete">
        delete
        from mydb.user
        where id = #{id}
    </delete>

    <!--批量删除-->
    <delete id="deleteByIds">
        delete from mydb.user where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <!--删除指定文件-->
    <delete id="deleteFile">
        delete
        from mydb.fileList
        where url = #{url}
    </delete>

    <!--条件查询-->
    <select id="listBy" resultType="cn.lwt_server.pojo.User">
        select * from mydb.user
        <where>
            <if test="msg != null">
                msg like concat('%',#{msg},'%')
            </if>
            <if test="startTime != null">
                and end_time <![CDATA[ >= ]]> #{startTime}
            </if>
            <if test="endTime != null">
                and start_time <![CDATA[ <= ]]> #{endTime}
            </if>
        </where>
        order by edit_time desc
    </select>

    <!--ID查询-->
    <select id="getById" resultType="cn.lwt_server.pojo.User">
        select *
        from mydb.user
        where id = #{id}
    </select>

    <!--全查询-->
    <select id="list" resultType="cn.lwt_server.pojo.User">
        select *
        from mydb.user
    </select>

    <!--检查账号-->
    <select id="checkAccount" resultType="cn.lwt_server.pojo.Account">
        select *
        from mydb.account
        where name = #{name}
    </select>


    <!--获取文件列表-->
    <select id="getFileList" resultType="cn.lwt_server.pojo.FileMessage">
        select *
        from mydb.fileList
    </select>

</mapper>